<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    x:Name="this"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WeatherAppMobile.Content.View.LabelWithText">
    <Frame CornerRadius="5" BorderColor="Black" Padding="1">
        <HorizontalStackLayout Spacing="5" BindingContext="{x:Reference this}">
            <Label 
                x:Name="LabelTitleName"
                Text="{Binding LabelTitle}" 
                HorizontalTextAlignment="Start"
                FontAttributes="Bold"/>
            <Label 
                x:Name="LabelTextName"
                Text="{Binding LabelText}" 
                HorizontalTextAlignment="End"/>
        </HorizontalStackLayout>
    </Frame>
</ContentView>
